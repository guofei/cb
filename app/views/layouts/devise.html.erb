<!DOCTYPE html>
<html>
  <head>
    <title>CampusBox</title>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
  </head>
  <body id="loginbody">
    <div id="wrapper">
      <div id="header">
        <!--logo-->
        <p class="logo"><%= link_to image_tag('Logo.png', { :border => '0', :alt => 'CampusBox'}), "/" %></p>
        <!-- ナビゲーション -->
        <ul class="header-navi">
          <% if !user_signed_in? %>
            <li><%= link_to('Login with Twitter', omniauth_authorize_path(:user, :twitter)) %></li>
            <li><%= link_to('Login with Facebook', omniauth_authorize_path(:user, :facebook)) %></li>
          <% end %>
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
            <%= link_to('My Profile', current_user.profile) %>
          <% end %>
        </ul>
      </div>
      <!-- // header end -->

      <div id="mainPic"></div>
      <div id="contents">
        <p class="notice"><%=notice%></p><p class="notice"><%=alert%></p>
        <%= yield %>
      </div><!-- // contents end -->

      <div id="footer">
        <p>Copyright CampusBox. All Rights Reserved.</p>
      </div>
    </div>
  </body>
</html>
