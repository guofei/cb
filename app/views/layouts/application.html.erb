<!DOCTYPE html>
<html>
  <head>
    <title>CampusBox</title>
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>
    <%= stylesheet_link_tag "application", :media => "all" %>

    <!-- Le fav and touch icons -->
  </head>
  <body>
    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = "//connect.facebook.net/ja_JP/all.js#xfbml=1";
      fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    </script>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">CampusBox</a>
          <div class="container nav-collapse">
            <ul class="nav">
              <li><%= link_to "Home", "/" %></li>
	      <li><%= link_to '検索', :search %></li>
	      <li><%= link_to('My order', :orders) %></li>
	      <li class="divider-vertical">fdsfs</li>
	      <li><%= link_to('Sell', :new_commodity) %></li>
	      <li><%= link_to('My Goods', :commodities) %></li>
	      <li><%= link_to('Mypage', :mypage_index) %></li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
      <div class="row-fluid">
	<div class="span2">
	  <!--Sidebar content-->
	  <ul class="nav nav-pills nav-stacked">
	    <h3>カテゴリ</h3>
	    <% all_categories.each do |category| %>
	      <li><%= link_to(category.name, category ) %></li>
	    <% end %>
	  </ul>
	</div>

	<div class="span8">
	  <!--Body content-->
	  <% selected_id = 0 %>
	  <% selected_id = current_user.school.id if user_signed_in? %>
	  <% if params[:action] == 'search' %>
	    <div class="form-inline" aligh="center">
	      <%= form_tag("search", :remote => true, :id => "search", :method => :get, :class => "searchform") do %>
		<%= select_tag "school", options_from_collection_for_select(all_schools, :id, :name, :selected => selected_id), :class => 'span2' %>
		<%= search_field_tag "keyword", nil, :class => 'span5 input-medium search-query' %>
		<%= submit_tag "Search", :class => :btn %>
	      <% end %>
	    </div>
	  <% else %>
	    <div class="form-inline" aligh="center">
	      <%= form_tag("/search", :method => :get, :class => "searchform", :id => "search") do %>
		<%= select_tag "school", options_from_collection_for_select(all_schools, :id, :name, :selected => selected_id), :class => 'span2' %>
		<%= search_field_tag "keyword", nil, :class => 'span5 input-medium search-query' %>
		<%= submit_tag "Search", :class => :btn %>
	      <% end %>
	    </div>
	  <% end %>

	  <%= yield %>
	</div>

	<div class="span2">
	  <!--Sidebar content-->
	  <ul class="nav nav-tabs nav-stacked">
	    <% if user_signed_in? %>
	      <li><%= "#{current_user.profile.name}様 " %></li>
	      <li><%= link_to('My Profile', current_user.profile) %></li>
	      <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
	    <% end %>
	    <% if !user_signed_in? %>
	      <li><%= link_to('Login with Twitter', omniauth_authorize_path(:user, :twitter)) %></li>
	      <li><%= link_to('Login with Facebook', omniauth_authorize_path(:user, :facebook)) %></li>
	      <li><%= link_to('If you have not Facebook or Twitter', new_user_session_path) %></li>
	    <% end %>
	  </ul>
	</div>
      </div>
    </div>

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
