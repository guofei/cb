<% @alerts.each do |alert| %>
  <% if alert.commodity %>
  <div class="alert alert-info">
    <p>Time：<%= alert.created_at.strftime("%Y.%m.%d %H:%M") %></p>
    <p>商品名：<%= alert.commodity.name %></p>
    <p>内容：<%= alert.info %></p>
    <%= link_to "詳細", alert.commodity, :class => "btn btn-small", :method => "get" %>
    <%= link_to 'Delete', alert, confirm: 'Are you sure?', :class => "btn btn-small", method: :delete %>
  </div>
  <% end %>
<% end %>

