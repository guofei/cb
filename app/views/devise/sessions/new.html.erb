<div id="login">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "loginform"}) do |f| %>
  <%= f.label :email %><br />
  <%= f.email_field :email , :class => "loginfield"%><br />

  <%= f.label :password %><br />
  <%= f.password_field :password ,:class => "loginfield"%><br />

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %> <%= f.label :remember_me %><br />
  <% end -%>
  <%= render "links" %>
  <%= f.submit "Sign in", :class => "button" %>
<% end %>

</div>
