<div id="signUp">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "loginform" }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %><br />
  <%= f.email_field :email, :class => "loginfield" %><br />

  <%= f.label :password %><br />
  <%= f.password_field :password, :class => "loginfield" %><br />

  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "loginfield" %><br />

  <%= f.submit "Next", :class => "button" %>
<% end %>

</div>
