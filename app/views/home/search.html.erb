<div class="search" aligh="center">
  <%= form_tag("search", :remote => true, :id => "search", :method => :get, :class => "searchform") do %>
    <%= select_tag "school", options_from_collection_for_select(all_schools, :id, :name) %>
    <%= search_field_tag "keyword", nil, :class => :searchfield %>
    <%= submit_tag "Search", :class => :button %>
  <% end %>
</div>
<div id="result_form">
<% if @result %>
  <% if @result.count == 0 %>
    <div>nothing</div>
  <% else %>
    <% @result.each do |commodity| %>
      <div><%= link_to("#{commodity.name}", commodity) %></div>
      <div>number:<%= commodity.num %></div>
      <div>descption:<%= commodity.desc %></div>
    <% end %>
  <% end %>
<% else %>
  <div>nothing</div>
<% end %>
</div>


