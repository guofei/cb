<div class="row-fluid">
  <div class="">

    <ul class="nav nav-pills">
      <li class="active"><a href="#">地域別</a></li>
      <% School.regions.each do |region| %>
        <li class="dropdown">
          <a class="dropdown-toggle" role="button" data-toggle="dropdown" href="#"><%= region %><b class="caret"></b></a>
          <ul id="menu1" class="dropdown-menu" role="menu" aria-labelledby="drop4">
            <% School.region(region).each do |school| %>
              <li role="presentation"><a role="menuitem" tabindex="-1" href="#"><%= school.name %></a></li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul> <!-- /tabs -->

  </div>
  <div class="alert alert-info">
    人気商品
  </div>
  <div class="accordion" id="popular">
    <% i = 0 %>
    <% @populars.each do |popular| %>
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#popular" href="#collapse<%= i %>">
	    <%= popular.commodity.name %>
          </a>
        </div>
	<% if i == 0 %>
          <div id="collapse<%= i %>" class="accordion-body collapse in">
	<% end %>
	<% if i > 0 %>
	  <div id="collapse<%= i %>" class="accordion-body collapse">
	<% end %>
        <div class="accordion-inner">
	  <table class="table">
            <thead>
              <tr>
		<th nowrap="nowrap">価格</th>
		<th nowrap="nowrap">詳細情報</th>
		<th nowrap="nowrap">画像</th>
		<th></th>
              </tr>
            </thead>
	    <tbody>
	    <tr>
	      <td><%= popular.commodity.price %></td>
	      <td><%= popular.commodity.desc %></td>
	      <td><%= image_tag(popular.commodity.photo.thumb.url) if popular.commodity.photo? %></td>
	      <td nowrap="nowrap"><%= button_to '詳しい', popular.commodity, :class => 'btn btn-info', :method => 'get' %></td>
	    </tr>
	    </tbody>
	  </table>
        </div>
        </div>
	</div>
	<% i+=1 %>
    <% end %>
    </div>
  </div>

  <div class="row-fluid">
      <div class="alert alert-info">
	新商品
      </div>
  <div class="accordion" id="new">
    <% i = 0 %>
    <% @new.each do |commodity| %>
      <div class="accordion-group">
        <div class="accordion-heading">
          <a class="accordion-toggle" data-toggle="collapse" data-parent="#new" href="#collapsenew<%= i %>">
	    <%= commodity.name %>
          </a>
        </div>
	<% if i == 0 %>
          <div id="collapsenew<%= i %>" class="accordion-body collapse in">
	<% end %>
	<% if i > 0 %>
	  <div id="collapsenew<%= i %>" class="accordion-body collapse">
	<% end %>
        <div class="accordion-inner">
	  <table class="table">
            <thead>
              <tr>
		<th nowrap="nowrap">価格</th>
		<th nowrap="nowrap">詳細情報</th>
		<th nowrap="nowrap">画像</th>
		<th></th>
              </tr>
            </thead>
	    <tbody>
	    <tr>
	      <td><%= commodity.price %>円</td>
	      <td><%= commodity.desc %></td>
	      <td><%= image_tag(commodity.photo.thumb.url) if commodity.photo? %></td>
	      <td nowrap="nowrap"><%= button_to '詳しい', commodity, :class => 'btn btn-info', :method => 'get' %></td>
	    </tr>
	    </tbody>
	  </table>
        </div>
        </div>
	</div>
	<% i+=1 %>
    <% end %>
    </div>
  </div>
