<% if @result %>
  <% if @result.count == 0 %>
    <div>Nothing</div>
  <% else %>
    <% @result.each do |commodity| %>
      <div class="well search_result">
        <div>
          <%= link_to("#{commodity.name}", commodity) %>
        </div>
        <div>
          <div class="goods-left">
            <div>Time:<%= commodity.created_at.strftime("%Y年%m月%d日 %H:%M") %></div>
            <div>Price:<%= commodity.price %></div>
            <div>Descption:<%= commodity.desc %></div>
          </div>
          <div class="goods-right">
            <%= image_tag(commodity.photo.thumb.url) if commodity.photo? %>
          </div>
          <div class="clear"></div>
        </div>
      </div>
    <% end %>
    <%= paginate(@result) %>
  <% end %>
<% else %>
  <div>nothing</div>
<% end %>

