<% if @result %>
  <% if @result.count == 0 %>
    <div>Nothing</div>
  <% else %>
    <% @result.each do |commodity| %>
      <div class="row-fluid">
	<div class="well">
	  <div class="goods-left">
	    <p><%= link_to("#{commodity.name}", commodity) %></p>
	    <p>Number:<%= commodity.num %></p>
	    <p>Descption:<%= commodity.desc %></p>
	  </div>
	  <div class="goods-right">
	    <%= image_tag(commodity.photo.thumb.url) if commodity.photo? %>
	  </div>
	</div>
      </div>
    <% end %>
  <% end %>
<% else %>
  <div>nothing</div>
<% end %>

