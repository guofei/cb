<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

<% i = whoami? current_user, @commodity %>


<p id="notice"><%= notice %></p>

<div class="alert alert-info">
  <%= @commodity.name %>
</div>

<p>
  <div class="fb-like" data-send="true" data-layout="button_count" data-width="150" data-show-faces="true"></div><br />

  <a href="https://twitter.com/share" class="twitter-share-button" data-lang="ja">ツイート</a><br />

  <%= link_to '同じ商品を出品する', new_commodity_path+"?id=#{@commodity.id}"  %>
</p>

<div class="alert alert-info">
  商品詳細
</div>
<p>
  <b>学校：</b>
  <%= @commodity.user.school.name %>
</p>

<p>
  <b>数量:</b>
  <%= @commodity.num %>
</p>

<p>
  <b>価格:</b>
  <%= @commodity.price %>
</p>

<p>
  <b>取引場所:</b>
  <%= @commodity.place %>
</p>

<p>
  <b>Descption:</b>
  <%= @commodity.desc %>
</p>

<p>
  <b>画像:</b><br />
  <%= image_tag(@commodity.photo.url) if @commodity.photo? %>
</p>

<% if i == 'seller' %>
  <%= render 'seller' %>
<% end %>

<%= render 'commentsofcommodity' %>

<%= render 'comments/form' %>

<% if i != 'seller' and i != 'buyer' %>
  <%= render 'orders/form', :order => @order%>
<% end %>

<%= link_to 'Edit', edit_commodity_path(@commodity) %> |
<%= link_to 'Back', commodities_path %>
