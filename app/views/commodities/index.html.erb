<div class="row-fluid">
  <div class="well">
    <h3>selling</h3>
    <table class="table table-striped">
      <tr>
	<th>Name</th>
	<th>Num</th>
	<th>Desc</th>
	<th>Price</th>
	<th></th>
	<th></th>
	<th></th>
      </tr>

      <% @selling.each do |commodity| %>
	<tr>
	  <td><%= link_to commodity.name, commodity %></td>
	  <td><%= commodity.num %></td>
	  <td><%= commodity.desc %></td>
	  <td><%= commodity.price %></td>
	  <td><%= link_to 'Edit', edit_commodity_path(commodity) %></td>
	  <td><%= link_to 'Destroy', commodity, confirm: 'Are you sure?', method: :delete %></td>
	</tr>
      <% end %>
    </table>
  </div>
</div>

