<div class="row-fluid">
  <div class="well">
    <p>販売中</p>
    <table class="table table-striped">
      <tr>
	<th>名前</th>
	<th>数量</th>
	<th>価格(円)</th>
	<th>購入者(人)</th>
	<th>時間</th>
        <th></th>
	<th></th>
      </tr>

      <% @selling.each do |commodity| %>
	<tr>
	  <td><%= link_to commodity.name, commodity %></td>
	  <td><%= commodity.num %></td>
	  <td><%= commodity.price %></td>
	  <td><%= commodity.orders.count %></td>
          <td><%= commodity.created_at.strftime("%Y.%m.%d %H:%M") %></td>
	  <td><%= link_to 'Edit', edit_commodity_path(commodity) %></td>
	  <td><%= link_to 'Cancel', commodity, confirm: 'Are you sure?', method: :delete %></td>
	</tr>
      <% end %>
    </table>
    <%= paginate @selling %>
  </div>
</div>

<div class="row-fluid">
  <div class="well">
    <p>販売終了</p>
    <table class="table table-striped">
      <tr>
	<th>名前</th>
	<th>数量</th>
	<th>価格(円)</th>
	<th>購入者(人)</th>
	<th>時間</th>
	<th></th>
	<th></th>
      </tr>

      <% @selled.each do |commodity| %>
	<tr>
	  <td><%= link_to commodity.name, commodity %></td>
	  <td><%= commodity.num %></td>
	  <td><%= commodity.price %></td>
	  <td><%= commodity.orders.count %></td>
          <td><%= commodity.created_at.strftime("%Y.%m.%d %H:%M") %></td>
	  <td><%= link_to 'Edit', edit_commodity_path(commodity) %></td>
	</tr>
      <% end %>
    </table>
    <%= paginate @selled %>
  </div>
</div>
