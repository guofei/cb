<%= form_for(@commodity, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @commodity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@commodity.errors.count, "error") %> prohibited this commodity from being saved:</h2>

      <ul>
      <% @commodity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
  <div class="alert alert-info">
    商品情報を入力してください
  </div>

  <div class="control-group">
    <%= f.label :商品名, :class => "control-label" %>
    <div class="controls"><%= f.text_field :name %></div>
  </div>
  <div class="control-group">
    <%= f.label :数量, :class => "control-label" %>
    <div class="controls"><%= f.number_field :num %></div>
  </div>
  <div class="control-group">
    <%= f.label :取引場所, :class => "control-label" %>
    <div class="controls"><%= f.text_field :place %></div>
  </div>
  <div class="control-group">
    <%= f.label :詳細情報, :class => "control-label" %>
    <div class="controls"><%= f.text_area :desc, :class => 'input-xlarge', :rows => 3 %></div>
  </div>
  <div class="control-group">
    <%=label_tag :category, :カテゴリー, :class => "control-label" %>
    <div class="controls"><%= select_tag "category", options_from_collection_for_select(all_categories, :id, :name), :selected => @category.id %></div>
  </div>
  <div class="control-group">
    <%= label_tag :image, :画像, :class => "control-label" %>
    <div class="controls"><%= f.file_field :photo %>
    <%= f.hidden_field :photo_cache %></div>
  </div>
  <div class="control-group">
    <%= f.label '価格(円)', :class => "control-label" %>
    <div class="controls"><%= f.number_field :price %></div>
  </div>
  <div class="control-group">
    <label class="control-label" for="disabledInput">連絡先</label>
    <div class="controls docs-input-sizes">
      <input class="span3 disabled" id="disabledInput" type="text" placeholder="Name:<%= current_user.profile.name %>" disabled><br />
      <input class="span3 disabled" id="disabledInput" type="text" placeholder="Mail:<%= current_user.profile.mail %>" disabled><br />
      <input class="span3 disabled" id="disabledInput" type="text" placeholder="Tel:<%= current_user.profile.tel %>" disabled><br />
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit "Create", :class => "btn btn-primary" %>
    <input type="reset" value="リセット" class="btn">
  </div>
</fieldset>
<% end %>
