@charset "utf-8";
* {
  margin: 0;
  padding: 0;

}
a img{border:none}

body {
  font-size: 85%;
  text-align: center;
  font-family: "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro", Osaka, "ＭＳ Ｐゴシック", "MS PGothic", sans-serif;
  padding: 0;
  margin: 0;
}

#wrapper {
  text-align: left;
  width: 980px;
  margin: 0 auto;
  padding: 0 20px;
  float:center;
}

#header{ 
border-bottom-style: double;
border-bottom-width: 3px;
border-bottom-color: #ccc;
width:100%; 
height:100px;
position: relative;
float: right;
}

#leftSideBar{ 
width:150px; 
float:left;
padding:10px 5px 5px;
position:relative;
}	

#leftSideBar .sideBarContent{
border: 1px solid #ccc;
padding:-25px 5px;
list-style-type:none;
}
	
#content{ 
width:630px; 
float:left; 
padding:10px 5px 5px;
position:relative;
}	

#content .search{
height:30px;
margin:0px auto 15px;
position:relative;
float:center;
}

#content .searchResult{
height:120px;
padding-left:120px;
position:relative;
border: 1px solid #ccc;
padding-top:10px;
margin-top:10px;
word-wrap:break-word;
word-break:break-all;
}

#content .myPage{
text-align: center;
}

#rightSideBar{ 
width:150px; 
float:right; 
padding:10px 5px 5px;
position:relative;
}		

#footer { 
padding: 20px 0 5px;
position:absolute;
bottom:0;
width:50%;
}

#footer p { text-align: center; }

/* 右上角功能键 
-------------------------------------- */
.header-navi {
  list-style-type: none;
  position: absolute;
  top: 10px;
  right: 0;
}

.header-navi a{
margin:5px;
-webkit-border-radius: 4px;
-moz-border-radius: 4px;
border-radius: 4px;
-webkit-box-shadow: 2px 2px 1px #808080;
-moz-box-shadow: 2px 2px 1px #808080;
box-shadow: 2px 2px 1px #808080;
background-color: #87CEFA;
display:inline-block;
font-size: 11pt;
color: #000;
padding:2px 4px;
height:20px;
text-align: center;
text-decoration: none;
background:#ccc;
background: -webkit-gradient(linear, left top, left bottom, from(#a9effc), to(#87CEFA));
background: -moz-linear-gradient(top,  #ededed,#ccc);
background: -moz-linear-gradient(top,  #ededed,#ccc);
}

.header-navi a:hover{
background: -moz-linear-gradient(top,  #cdcdcd,#888);
}	

.header-navi a:active{
background: -moz-linear-gradient(top,  #ababab,#666);
}
/* 顶部功能键
-------------------------------------- */
#globalnavi {
  font-size: 95%;
  list-style-type: none;
  width: 300px;
  height: 30px;
  position: absolute;
  top: 0;
  left: 250px;
}

#globalnavi li {
  width: 100px;
  float: left;
}

#globalnavi li a {
  text-align: center;
  text-decoration: none;
  width: 100px;
  height: 23px;
  display: block;
  padding-top: 7px;
background: -moz-linear-gradient(top,  #ededed,#87CEFA);
  color: #000;
}

#category01 a { background-position: 0 0; }

#category02 a { background-position: -200px 0; }

#globalnavi li a:hover {
  text-decoration: none;
background: -moz-linear-gradient(top,  #ededed,#87CEFA);
  color: #fff;
}

#category01 a:hover { background-position: 0 -40px; }

#category02 a:hover { background-position: -200px -40px; }

/*顶部功能键选项*/

#globalnavi ul {
  list-style-type: none;
  width: 100px;
  height: auto;
  position: static;
}

#globalnavi ul li {
  width: 100px;
  float: none;
}

#globalnavi ul li a {
  text-align: left;
  text-decoration: none;
  width: 90px;
  height: auto;
  display: block;
  padding: 5px;
background: -moz-linear-gradient(top,  #ededed,#87CEFA);
  color: #000;
}

#globalnavi ul li a:hover {
  text-decoration: none;
background: -moz-linear-gradient(top,  #ededed,#87CEFA);
  color: #fff;
}

#globalnavi .menu ul { display: none; }

#globalnavi .menuOn ul { display: block; }

/* 左侧功能键
-------------------------------------- */
.sideBarContent a{
border: 1px solid #555;
margin:10px;
line-height: 30px;
-webkit-border-radius: 4px;
-moz-border-radius: 4px;
border-radius: 4px;
-webkit-box-shadow: 1px 1px 1px #808080;
-moz-box-shadow: 1px 1px 1px #808080;
box-shadow: 1px 1px 1px #808080;
background-color: #87CEFA;
display:block;
font-size: 11pt;
color: #333;
width:120px;
height:25px;
text-align: center;
text-decoration: none;
background: -webkit-gradient(linear, left top, left bottom, from(#a9effc), to(#87CEFA));
background: -moz-linear-gradient(top,  #ededed,#87CEFA);
}

.sideBarContent a:hover{
background: -moz-linear-gradient(top,  #bbb,#64f6ee);
}

.sideBarContent a:active{
background: -moz-linear-gradient(top,  #999,#42d4bb);
}

.sideBarContent .insetbutton{
background: #20B2AA;
line-height: 30px;
-webkit-border-radius: 4px;
-moz-border-radius: 4px;
border-radius: 4px;
box-shadow: 1px 1px 1px #111;
display:block;
font-size: 11pt;
color: #333;
width:120px;
height:25px;
text-align: center;
text-decoration: none;
background: -webkit-gradient(linear, left top, left bottom, from(#a9effc), to(#87CEFA));
background: -moz-linear-gradient(top,  #777,#20B2AA);
}

.sideBarContent .side-title {
  background:#dfd;
}

/* 我的商品一览
-------------------------------------- */
.myPage img{
max-width:150px;
width:expression(this.width>150?"150px":this.width);
max-height:150px;
height:expression(this.height>150?"150px":this.height); 
margin:5px;
}
.myPage .title{
  background:#dfd;
}
.myPage h4{
margin:20px auto 5px;
}
.myPage a{
float:right;
margin-bottom:10px;
}
/* 排列顺序按钮
-------------------------------------- */
.search a{
line-height: 30px;
-webkit-border-radius: 4px;
-moz-border-radius: 4px;
border-radius: 4px;
-webkit-box-shadow: 2px 2px 1px #808080;
-moz-box-shadow: 2px 2px 1px #808080;
box-shadow: 2px 2px 1px #808080;
background-color: #87CEFA;
display:inline-block;
font-size: 11pt;
color: #333;
width:70px;
height:25px;
text-align: center;
text-decoration: none;
background: -webkit-gradient(linear, left top, left bottom, from(#a9effc), to(#87CEFA));
background: -moz-linear-gradient(top,  #ededed,#ccc);
}
	
.search a:hover{
background: -moz-linear-gradient(top,  #cdcdcd,#888);
}
	
.search a:active{
background: -moz-linear-gradient(top,  #ababab,#666);
}

/* 搜索结果 
-------------------------------------- */

.searchResult img{

max-width:110px;
width:expression(this.width>110?"110px":this.width);
max-height:110px;
height:expression(this.height>110?"110px":this.height); 
position:absolute;
left:5px;
}

.commodityPrice{
width:100px;
right:5px;
top:30px;
position:absolute;
}

.commodityDescription{
width:380px;
top:5px;
}

.credits {
	margin-bottom: 80px;
	padding-bottom: 30px;
	border-bottom: solid 1px #ccc;
}

/* 搜索栏 
-------------------------------------- */
.searchform {
	display: inline-block;
	border: solid 1px #d2d2d2;
	padding: 3px 5px;
	
	-webkit-border-radius: 2em;
	-moz-border-radius: 2em;
	border-radius: 2em;

	-webkit-box-shadow: 0 1px 0px rgba(0,0,0,.1);
	-moz-box-shadow: 0 1px 0px rgba(0,0,0,.1);
	box-shadow: 0 1px 0px rgba(0,0,0,.1);

	background: #f1f1f1;
	background: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#ededed));
	background: -moz-linear-gradient(top,  #fff,  #ededed);
}

.searchform input {
	font: normal 12px/100% Arial, Helvetica, sans-serif;
}

.searchform .searchfield {
	background: #fff;
	padding: 6px 6px 6px 8px;
	width: 460px;
	border: solid 1px #bcbbbb;
	outline: none;

	-webkit-border-radius: 2em;
	-moz-border-radius: 2em;
	border-radius: 2em;

	-moz-box-shadow: inset 0 1px 2px rgba(0,0,0,.2);
	-webkit-box-shadow: inset 0 1px 2px rgba(0,0,0,.2);
	box-shadow: inset 0 1px 2px rgba(0,0,0,.2);
}

.searchform .button {
	color: #fff;
	border: solid 1px #494949;
	font-size: 12px;
	height: 27px;

	text-shadow: 0 1px 1px rgba(0,0,0,.6);

	-webkit-border-radius: 2em;
	-moz-border-radius: 2em;
	border-radius: 2em;

	background: #5f5f5f;
	background: -webkit-gradient(linear, left top, left bottom, from(#9e9e9e), to(#454545));
	background: -moz-linear-gradient(top,  #9e9e9e,  #454545);
	filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#9e9e9e', endColorstr='#454545'); /* ie7 */
	-ms-filter:  progid:DXImageTransform.Microsoft.gradient(startColorstr='#9e9e9e', endColorstr='#454545'); /* ie8 */
}

.searchform .button:hover{
	background: -moz-linear-gradient(top,  #7c7c7c,  #232323);
}

.searchform .button:active{
	background: -moz-linear-gradient(top,  #5a5a5a,  #111111);
}
